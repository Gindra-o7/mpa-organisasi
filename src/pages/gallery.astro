---

<Layout title="Galeri">
  <section class="font-sora bg-gradient-to-br from-[#F5F5F5] via-white to-[#F5F5F5] py-16 lg:py-24 overflow-hidden relative">
    <!-- Background decorative elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-[#388E3C]/5 rounded-full blur-3xl -z-10"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-[#81D4FA]/5 rounded-full blur-3xl -z-10"></div>

    <div class="container mx-auto px-6 md:px-8 max-w-7xl relative z-10">
      <div class="flex flex-col gap-12">
        {/* Header Section */}
        <HeaderGallery />

        {/* Filter Categories */}
        <FilterCategoriesGallery categories={galleryCategories} />

        {/* Gallery Grid */}
        <GridGallery galleryImages={galleryImages} />

        {/* Load More Button */}
        <LoadMoreButton />
      </div>
    </div>
  </section>
</Layout>
