---
import { BookOpen, Users, Calendar, Building2 } from "lucide-astro";
---

<section id="keagamaan" class="font-sora bg-gradient-to-br from-[#F5F5F5] via-white to-[#F5F5F5] py-16 lg:py-24 overflow-hidden relative scroll-mt-20">
  <!-- Background decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-[#FFD180]/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-[#388E3C]/5 rounded-full blur-3xl -z-10"></div>

  <div class="container mx-auto px-6 md:px-8 max-w-7xl relative z-10">
    <div class="flex flex-col gap-12">
      {/* Header Section */}
      <div class="text-center max-w-3xl mx-auto space-y-4">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-[#FFD180]/10 rounded-full border border-[#FFD180]/20">
          <BookOpen class="w-4 h-4 text-[#FFD180]" />
          <span class="text-sm font-medium text-[#FFD180] uppercase tracking-wider">Program Keagamaan</span>
        </div>

        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold bg-gradient-to-r from-[#388E3C] via-[#81D4FA] to-[#FFD700] bg-clip-text text-transparent leading-tight pb-1">
          Program Keagamaan Yayasan Sawiyan
        </h2>
        <p class="text-lg text-gray-600">
          Program-program keagamaan untuk memperdalam pemahaman agama dan memperkuat nilai-nilai spiritual masyarakat
        </p>
      </div>

      {/* Program Cards Grid */}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {[
          {
            icon: BookOpen,
            title: "Kajian Keagamaan Rutin",
            description: "Kajian keagamaan yang diadakan secara rutin setiap bulan, terbuka untuk umum, dengan tema-tema aktual dan relevan dengan kehidupan sehari-hari.",
            color: "#FFD180",
          },
          {
            icon: Calendar,
            title: "Program Ramadhan",
            description: "Berbagai kegiatan keagamaan selama bulan Ramadhan, termasuk buka puasa bersama, tarawih, tadarus, dan program-program khusus Ramadhan lainnya.",
            color: "#388E3C",
          },
          {
            icon: Users,
            title: "Pembinaan Remaja Masjid",
            description: "Program pembinaan untuk remaja masjid melalui kegiatan keagamaan, sosial, dan pengembangan karakter untuk generasi muda yang lebih baik.",
            color: "#81D4FA",
          },
          {
            icon: Building2,
            title: "Penyaluran Zakat",
            description: "Program penyaluran zakat fitrah dan zakat mal kepada mustahik yang berhak, dengan sistem yang transparan dan terpercaya.",
            color: "#FFD700",
          },
          {
            icon: BookOpen,
            title: "Tahfidz Al-Quran",
            description: "Program menghafal Al-Quran untuk anak-anak dan remaja, dengan metode yang menyenangkan dan efektif untuk memudahkan proses menghafal.",
            color: "#FFD180",
          },
          {
            icon: Users,
            title: "Kelas Mengaji",
            description: "Program belajar membaca Al-Quran untuk berbagai usia, dari anak-anak hingga dewasa, dengan pengajar yang berpengalaman dan sabar.",
            color: "#388E3C",
          },
        ].map((program) => {
          const IconComponent = program.icon;
          return (
            <div class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 p-8 relative overflow-hidden">
              {/* Decorative gradient accent */}
              <div class="absolute top-0 left-0 right-0 h-1.5 bg-gradient-to-r" style={`background: linear-gradient(to right, ${program.color}, ${program.color}80);`}></div>
              
              {/* Icon */}
              <div class="mb-6">
                <div class="w-16 h-16 rounded-xl flex items-center justify-center" style={`background: linear-gradient(135deg, ${program.color}15, ${program.color}25);`}>
                  <IconComponent class="w-8 h-8" style={`color: ${program.color};`} />
                </div>
              </div>

              <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-[#FFD180] transition-colors duration-200">
                {program.title}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {program.description}
              </p>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</section>

