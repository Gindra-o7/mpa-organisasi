---
const { currentPage = 1, totalPages = 3 } = Astro.props;
---

<div class="flex justify-center gap-2">
  {
    Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
      <button
        class={`px-4 py-2 rounded-lg font-semibold text-sm transition-all duration-200 ${
          page === currentPage
            ? "bg-gradient-to-r from-[#388E3C] to-[#81D4FA] text-white shadow-lg"
            : "bg-white border border-gray-200 text-gray-700 hover:bg-[#388E3C] hover:text-white hover:border-[#388E3C]"
        }`}
        data-page={page}
      >
        {page}
      </button>
    ))
  }
  {currentPage < totalPages && (
    <button class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-gray-700 hover:bg-[#388E3C] hover:text-white hover:border-[#388E3C] transition-all duration-200">
      Selanjutnya
    </button>
  )}
</div>

