---

<section class="bg-[#57081b] py-10 md:py-20 font-sora">
  <div class="px-6 2xl:px-28 flex flex-col gap-10">
    <div
      class="flex gap-7 flex-col lg:flex-row lg:items-center lg:justify-between"
    >
      <div class="lg:w-7/12">
        <h2
          class="text-3xl md:text-5xl font-bold text-white tracking-tight leading-tight"
        >
          {title}
        </h2>
      </div>
    </div>

    <div class="embla-carousel-he -mt-4 -mb-2 md:mb-0 md:mt-0 relative -mx-4">
      <div class="embla__viewport-he overflow-hidden md:ml-4">
        <div class="embla__container flex md:-ml-4">
          {
            highlightEventListData.map(
              (highlightEvent) => (
                <div
                  data-link={highlightEvent.link_drive}
                  data-title={highlightEvent.judul}
                  class="embla__slide cursor-pointer flex-grow-0 flex-shrink-0 basis-full md:basis-1/2 lg:basis-1/3 min-w-0 md:pl-4"
                >
                  <div class="border border-gray-700 rounded-xl flex flex-col justify-between h-full">
                    <div class="w-full h-64 relative">
                      <img
                        class="w-full h-full object-cover rounded-t-xl" 
                        src={highlightEvent.url_thumbnail}
                        alt={highlightEvent.judul}
                      />
                      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-t hover:from-amber-900/80 from-black/80 to-transparent rounded-t-xl" />
                      <span class="absolute whitespace-nowrap bg-amber-500 bottom-3.5 left-1/2 transform -translate-x-1/2 text-lg px-4 text-[#710d23] font-semibold rounded-full">
                        {highlightEvent.judul}
                      </span>
                    </div>
                  </div>
                </div>
              )
            )
          }
        </div>
      </div>

      <button
        class="embla__prev-he absolute md:top-1/2 md:-translate-y-1/2 top-1.5 left-1 md:left-[-2.5rem] hidden md:flex items-center justify-center md:w-12 md:h-12 w-8 h-8 bg-amber-300/50 backdrop-blur-sm rounded-full shadow-md text-gray-800 hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 disabled:opacity-30 disabled:cursor-not-allowed transition-opacity"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path></svg
        >
      </button>
      <button
        class="embla__next-he absolute md:top-1/2 md:-translate-y-1/2 top-3.5 md:-right-[3.4rem] right-3 flex items-center justify-center md:w-12 md:h-12 w-8 h-8 bg-amber-300/50 backdrop-blur-sm rounded-full shadow-md text-gray-800 hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 disabled:opacity-30 disabled:cursor-not-allowed transition-opacity"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path></svg
        >
      </button>
    </div>
  </div>
</section>

<div
  id="videoModal"
  class="fixed inset-0 font-sora hidden items-center justify-center bg-black/70 z-50"
>
  <div class="bg-white rounded-xl overflow-hidden w-[90%] max-w-3xl relative">
    <button
      id="closeModal"
      class="absolute top-2 left-2 cursor-pointer hover:scale-90 active:scale-100 bg-red-700 text-white px-3 py-1 rounded-full z-10"
      >X</button
    >
    <div class="aspect-video">
      <iframe
        id="videoFrame"
        src=""
        allow="autoplay; encrypted-media"
        allowfullscreen
        class="w-full h-full"></iframe>
    </div>
    <div id="videoTitle" class="md:p-3 py-1 px-2 text-lg font-semibold bg-amber-500 text-gray-800"></div>
  </div>
</div>

<script>
  import EmblaCarousel from "embla-carousel";

  const emblaRoot = document.querySelector(".embla-carousel-he");

  if (emblaRoot) {
    const viewport = emblaRoot.querySelector<HTMLElement>(
      ".embla__viewport-he"
    );
    const prevBtn =
      emblaRoot.querySelector<HTMLButtonElement>(".embla__prev-he");
    const nextBtn =
      emblaRoot.querySelector<HTMLButtonElement>(".embla__next-he");

    if (viewport && prevBtn && nextBtn) {
      const emblaApi = EmblaCarousel(viewport, { loop: true, align: "start" });

      const updateArrowButtons = () => {
        if (!emblaApi) return;
        prevBtn.disabled = !emblaApi.canScrollPrev();
        nextBtn.disabled = !emblaApi.canScrollNext();
      };

      prevBtn.addEventListener("click", () => emblaApi.scrollPrev(), false);
      nextBtn.addEventListener("click", () => emblaApi.scrollNext(), false);

      emblaApi.on("select", updateArrowButtons);
      emblaApi.on("reInit", updateArrowButtons);

      updateArrowButtons();
    }
  }

  // MODAL VIDEO HANDLER
  const modal = document.getElementById("videoModal");
  const videoFrame = document.getElementById("videoFrame");
  const videoTitle = document.getElementById("videoTitle");
  const closeModal = document.getElementById("closeModal");

  if(modal && videoFrame && videoTitle && closeModal) {
    document.querySelectorAll(".embla__slide").forEach((slide) => {
      slide.addEventListener("click", () => {
        const link = slide.getAttribute("data-link");
        const title = slide.getAttribute("data-title");

        if (link) {
            // Logic replace ini akan mengubah link Gdrive view menjadi preview/embed
            // Jika link dummy di atas diganti link YouTube Embed, replace ini mungkin perlu disesuaikan
            // atau cukup pastikan dummy link mengandung "view?usp=sharing" jika ingin mengetes logic replace.
          (videoFrame as HTMLIFrameElement).src = link.replace("view?usp=sharing", "preview"); 
          videoTitle.textContent = title || "";
          modal.classList.remove("hidden");
          modal.classList.add("flex");
        }
      });
    });

    closeModal.addEventListener("click", () => {
      (videoFrame as HTMLIFrameElement).src = ""; // stop video
      modal.classList.add("hidden");
      modal.classList.remove("flex");
    });
  }
</script>