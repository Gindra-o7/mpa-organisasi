---

<section class="relative py-20 overflow-hidden bg-primary">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-96 h-96 bg-accent/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-lavender/10 rounded-full blur-3xl animate-float-delayed"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-white/5 rounded-full blur-3xl animate-pulse"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in">
      <div class="inline-block mb-4">
        <span class="px-4 py-2 bg-accent/20 text-accent rounded-full text-sm font-semibold border border-accent/30">
          ðŸ’¬ Testimoni
        </span>
      </div>
      <h2 class="text-5xl font-bold text-white mb-4 relative inline-block">
        Apa Kata Mereka
        <div class="absolute -bottom-2 left-0 w-full h-1 bg-accent rounded-full"></div>
      </h2>
      <p class="text-white/90 text-lg mt-6 max-w-2xl mx-auto">
        Dengarkan pengalaman para profesional dan pemimpin industri yang telah bergabung dengan ekosistem APPDI
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto mb-16">
      {testimonials.map((testimonial, index) => (
        <div 
          class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden border border-lavender hover:scale-105 animate-slide-up"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Quote Icon -->
          <div class="absolute top-6 right-6 opacity-10 group-hover:opacity-20 transition-opacity duration-300">
            <svg class="w-16 h-16 text-primary" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>

          <div class="p-8">
            <!-- Profile Section -->
            <div class="flex items-center gap-4 mb-6">
              <div class="relative">
                <img 
                  src={testimonial.image} 
                  alt={testimonial.name}
                  class="w-16 h-16 rounded-full border-4 border-lavender group-hover:border-accent transition-colors duration-300"
                />
                <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-accent rounded-full border-2 border-white flex items-center justify-center">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <h3 class="font-bold text-primary text-lg group-hover:text-accent transition-colors">
                  {testimonial.name}
                </h3>
                <p class="text-sm text-gray-600">{testimonial.position}</p>
                <p class="text-xs text-accent font-semibold">{testimonial.company}</p>
              </div>
            </div>

            <!-- Rating Stars -->
            <div class="flex gap-1 mb-4">
              {[...Array(testimonial.rating)].map(() => (
                <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
