---
export interface MenuItem {
  name: string;
  href: string;
}

const menuItems: MenuItem[] = [
  { name: "Beranda", href: "/" },
  { name: "Tentang Organisasi", href: "/profil" },
  { name: "Keanggotaan", href: "/program" },
  { name: "Publikasi", href: "/berita" },
  { name: "Hubungi Kami", href: "/kontak" },
];

// Get current path
const currentPath = Astro.url.pathname;
---

<div class="w-full fixed top-0 left-0 right-0 z-[100] transition-all duration-500 ease-out px-0 py-0" id="navbar-wrapper">
  <nav class="w-full flex justify-between items-center px-6 2xl:px-8 py-3 bg-primary shadow-lg relative z-[100] transition-all duration-500 ease-out rounded-none" id="navbar">
    <div class="w-full max-w-7xl mx-auto flex justify-between items-center transition-all duration-500 ease-out">
      <a href="/" class="cursor-pointer hover:opacity-80 transition-opacity duration-200 ease-out active:opacity-70 flex-shrink-0">
        <span class="text-xl md:text-2xl font-bold tracking-wider">
          <span class="bg-lavender-light from-accent via-lavender to-accent bg-clip-text text-transparent"> ORGANISASI </span>
        </span>
      </a>

      <div class="hidden xl:flex items-center gap-8 text-white font-semibold">
        {
          menuItems.map((item) => {
            const isActive = currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href));
            return (
              <a href={item.href} class={`relative text-base transition-colors duration-300 ease-out cursor-pointer group py-1 ${isActive ? "active" : ""}`}>
                <span class="relative z-10">{item.name}</span>
                <span class={`absolute bottom-0 left-0 h-0.5 bg-gradient-to-r from-accent to-accent-light transition-all duration-300 ease-out ${isActive ? "w-full" : "w-0 group-hover:w-full"}`} />
              </a>
            );
          })
        }
        <a href="/daftar" class="bg-accent hover:bg-accent-dark text-white px-6 py-2.5 rounded-md font-semibold text-base transition-all duration-300 ease-out shadow-md hover:shadow-lg hover:scale-105 active:scale-95"> Daftar Sekarang </a>
      </div>

      <div class="xl:hidden flex gap-1 md:gap-2 justify-center items-center">
        <button id="hamburger-button" class="text-white focus:outline-none transition-transform duration-300 ease-out active:scale-90">
          <svg id="hamburger-icon" class="md:w-8 md:h-8 w-6 h-6 transition-transform duration-300 ease-out" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <div id="mobile-menu" class="fixed top-0 left-0 w-full h-full bg-primary z-[100] transform -translate-y-full transition-transform duration-500 ease-in-out xl:hidden overflow-y-auto">
    <div class="flex justify-end px-6 pt-4">
      <button id="close-menu-button" class="text-white focus:outline-none transition-transform duration-300 ease-out active:scale-90 hover:text-accent">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="mt-4">
      <div class="flex flex-col text-white text-md font-semibold">
        {
          menuItems.map((item) => (
            <div class="border-b border-gray-100/30 px-7 py-4 transition-colors duration-200 hover:bg-white/5">
              <a href={item.href} class="block w-full text-[1rem] hover:text-accent transition-colors duration-200 ease-out">
                {item.name}
              </a>
            </div>
          ))
        }
        <div class="px-7 py-6">
          <a href="/daftar" class="block w-full bg-accent hover:bg-accent-dark text-white px-6 py-3 rounded-md font-semibold text-center transition-all duration-200 ease-out shadow-md"> Daftar Sekarang </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    const hamburgerButton = document.getElementById("hamburger-button");
    const closeMenuButton = document.getElementById("close-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const navbarWrapper = document.getElementById("navbar-wrapper");
    const hamburgerIcon = document.getElementById("hamburger-icon");

    const toggleMenu = (shouldClose: boolean) => {
      if (shouldClose) {
        mobileMenu!.classList.add("-translate-y-full");
        hamburgerIcon!.classList.remove("rotate-90");
      } else {
        mobileMenu!.classList.remove("-translate-y-full");
        hamburgerIcon!.classList.add("rotate-90");
      }
    };

    hamburgerButton!.addEventListener("click", () => {
      const isMenuOpen = !mobileMenu!.classList.contains("-translate-y-full");
      toggleMenu(isMenuOpen);
    });

    closeMenuButton!.addEventListener("click", () => {
      toggleMenu(true);
    });

    let lastScrollY = window.scrollY;
    let ticking = false;

    const updateNavbar = () => {
      const currentScrollY = window.scrollY;
      updateNavbarStyle();
      lastScrollY = currentScrollY;
      ticking = false;
    };

    const onScroll = () => {
      if (!ticking) {
        window.requestAnimationFrame(updateNavbar);
        ticking = true;
      }
    };

    window.addEventListener("scroll", onScroll, { passive: true });

    const updateNavbarStyle = () => {
      const navbar = document.getElementById("navbar");
      const navbarWrapper = document.getElementById("navbar-wrapper");

      if (!navbar || !navbarWrapper) return;

      if (window.scrollY < 200) {
        // State awal (top)
        navbarWrapper.style.paddingLeft = "0px";
        navbarWrapper.style.paddingRight = "0px";
        navbarWrapper.style.paddingTop = "0px";
        navbarWrapper.style.paddingBottom = "0px";
        navbarWrapper.style.justifyContent = "stretch";

        navbar.style.backgroundColor = "var(--color-primary)";
        navbar.style.backdropFilter = "none";
        navbar.style.borderRadius = "0px";
        navbar.style.border = "none";
      } else {
        // State scrolled
        navbarWrapper.style.paddingLeft = "1rem";
        navbarWrapper.style.paddingRight = "1rem";
        navbarWrapper.style.paddingTop = "1rem";
        navbarWrapper.style.paddingBottom = "1rem";
        navbarWrapper.style.justifyContent = "center";

        navbar.style.backgroundColor = "rgba(74, 20, 140, 0.9)";
        navbar.style.backdropFilter = "blur(12px)";
        navbar.style.borderRadius = "9999px";
        navbar.style.border = "1px solid rgba(255, 255, 255, 0.2)";
      }
    };

    updateNavbarStyle();
  </script>
</div>
